## we are only allowed to acces UPLOADED media of others
#if ($ctx.stash.userId != $ctx.identity.cognitoIdentityId and $ctx.stash.mediaStatus != 'UPLOADED')
  $util.error('Access denied - may only retrieve other users UPLOADED media', 'ClientError')
