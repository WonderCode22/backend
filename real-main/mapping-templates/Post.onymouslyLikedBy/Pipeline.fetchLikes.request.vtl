{
  "version": "2018-05-29",
  "operation": "Query",
  "query": {
    "expression": "gsiA2PartitionKey = :pk and begins_with(gsiA2SortKey, :skPrefix)",
    "expressionValues": {
      ":pk": { "S": "like/$ctx.source.postId" },
      ":skPrefix": { "S": "ONYMOUSLY_LIKED" }
    }
  },
  "index": "GSI-A2",
  "scanIndexForward": true,
  "limit": $limit
  #if ($ctx.args.nextToken)
    , "nextToken": "$ctx.args.nextToken"
  #end
}
